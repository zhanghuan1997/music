<!--pages/detail-video/index.wxml-->
<wxs src="../../utils/format.wxs" module="format"/>
<video class="video" src="{{mvUrl}}"/>
<view class="mvdetail">

  <view class="mvname">
    <text>{{mvDetail.name}}</text>
  </view>
  <view class="artname">
    <text>{{mvDetail.artistName}}</text>
  </view>
  <view class="info">
    <text>{{format.formatCount(mvDetail.playCount)}}次播放 - </text>
    <text>{{mvDetail.publishTime}}</text>
  </view>
</view>
<view class="title">
  推荐视频
</view>
<video-related mvRelated="{{mvRelated}}"></video-related>
