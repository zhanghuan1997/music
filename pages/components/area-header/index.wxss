.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.title {
  font-size: 36rpx;
  font-weight: 700;
}
.right{
  display: flex;
}
.default {
  display: none;
  align-items: center;
  font-size: 28rpx; 
  color: #777;
}
.slot:empty  + .default{
  display: flex;
}
.right image{
  width: 50rpx;
  height: 50rpx;
}